<h1>Listado de Categorias</h1>

<a class="button button--primary" href="/categorias/create">Crear una categoria</a>

<section class="categorias"> 
    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Editar</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
            <% categorias.forEach(categoria => { %>
                <tr>
                    <td> <a  href="/categorias/<%= categoria.id %>"> <%= categoria.nombre %></a></td>
                    <td><a  class="button button--primary" href="/categorias/<%= categoria.id %>/edit">Editar</a></td>
                    <td>
                        <form class="form-delete" action="/categorias/<%= categoria.id %>?_method=DELETE" method="post">
                            <button class="button button--danger" type="submit">Eliminar</button>
                        </form>
                </tr>
            <% }); %>
        </tbody>
    </table>
</section>

<script>
    document.addEventListener('submit',(event) => {
        event.preventDefault();

        if(event.target.classList.contains('form-delete')){
             if(confirm('¿Estás seguro que deseas eliminar esta categoria?')){
                event.target.submit();
            }
        }});
</script>